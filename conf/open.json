{
  "audio": {
    "type": "playlist",
    "exts": ["mp3", "wav", "m4a", "aac", "mp1", "mp2", "flac", "aa", "aax", "act", "aiff", "amr", "ape", "au", "awb", "dct", "dss", "dvf", "gsm", "iklax", "ivs", "m4b", "m4p", "mmf", "mpc", "msv", "nmf", "nsf", "oga", "mogg", "opus", "ra", "raw", "sin", "tta", "vox", "wma", "wv", "8svx"],
    "app": "mpv",
    "args": "--fs-screen=all -fs --loop-playlist --script-opts=osc-hidetimeout=6000 --player-operation-mode=pseudo-gui"
  },
  "font": {
    "type": "lonely",
    "exts": ["sfd, ttf"],
    "app": "fontforge",
    "args": null
  },
  "graphical": {
    "type": "lonely",
    "exts": ["xcf"],
    "app": "gimp",
    "args": null
  },
  "image_bitmap": {
    "type": "playlist",
    "exts": ["jpg", "jpeg", "png", "tif", "gif", "bmp", "pjpeg", "jfif", "exif", "tiff", "png", "ppm", "pgm", "pbm", "pnm", "webp", "hdr", "heif", "bat", "bpg"],
    "app": "sxiv",
    "args": "-bf"
  },
  "image_vectorial": {
    "type": "lonely",
    "exts": ["svg"],
    "app": "inkscape",
    "args": null
  },
  "libreoffice_writer": {
    "type": "lonely",
    "exts": ["odt", "doc", "docx"],
    "app": "libreoffice --writer",
    "args": null
  },
  "libreoffice_calc": {
    "type": "lonely",
    "exts": ["ods", "calc", "xlsx"],
    "app": "libreoffice --calc",
    "args": null
  },
  "markup": {
    "type": "lonely",
    "exts": ["ad"],
    "app": "brave",
    "args": "-a"
  },
  "python": {
    "type": "lonely",
    "exts": ["py"],
    "app": "pycharm",
    "args": null
  },
  "pdf": {
    "type": "lonely",
    "exts": ["pdf"],
    "app": "brave",
    "args": "-a"
  },
  "rar": {
    "type": "archive_a",
    "exts": ["rar"],
    "app": "unrar",
    "args": "x"
  },
  "tar": {
    "type": "archive_a",
    "exts": ["tar"],
    "app": "tar",
    "args": "-xvf"
  },
  "tar_gz": {
    "type": "archive_a",
    "exts": ["tar.gz"],
    "app": "tar",
    "args": "-zxvf"
  },
  "tar_xz": {
    "type": "archive_b",
    "exts": ["tar.xz"],
    "app": "tar",
    "args": "--directory FOLDER_PATH -xJf ARCHIVE_PATH"
  },
  "tar_bz2": {
    "type": "archive_a",
    "exts": ["tar.bz2"],
    "app": "tar",
    "args": "jxvf"
  },
  "text": {
    "type": "lonely",
    "exts": ["text", "txt", "conf", "sh", "note", "log", "c", "h", "js", "tmp", "json", "csv", "css", "java", "xml", "tex", "js"],
    "app": "atom",
    "args": "-a"
  },
  "tgz": {
    "type": "archive_a",
    "exts": ["tgz"],
    "app": "tar",
    "args": "-xvzf"
  },
  "video": {
    "type": "playlist",
    "exts": ["avi", "mpeg", "mp4", "ogg", "quicktime", "webm", "mp2t", "flv", "mov", "mkv", "mts", "vob", "ogv", "drc", "gif", "gifv", "mng", "mts", "m2ts", "mwv", "yuv", "rm", "rmvb", "asf", "amv", "m4v", "mpg", "mpe", "mpv", "m2v", "svi", "3gp", "3g2", "mxf", "roq", "nsv", "f4v", "f4p", "f4a", "f4b"],
    "app": "mpv",
    "args": "--fs-screen=all -fs --loop-playlist --no-sub --script-opts=osc-hidetimeout=2000"
  },
  "web": {
    "type": "lonely",
    "exts": ["html"],
    "app": "brave",
    "args": "-a"
  },
  "zip": {
    "type": "archive_b",
    "exts": ["zip"],
    "app": "unzip",
    "args": "-d FOLDER_PATH ARCHIVE_PATH"
  }
}
